{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "white": "#f7f7f7",
    "black": "#111111"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "envvar",
          "background": "transparent",
          "foreground": "#93d0ff",
          "style": "plain",
          "properties": { "var_name": "CONDA_PROMPT_MODIFIER" },
          "template": "{{ .Value }}"
        },
        {
          "type": "envvar",
          "background": "transparent",
          "foreground": "#93d0ff",
          "style": "plain",
          "properties": { "var_name": "CONDA_DEFAULT_ENV" },
          "template": "{{ if .Value }}({{ .Value }}){{ end }}"
        },
        {
          "type": "envvar",
          "background": "transparent",
          "foreground": "#93d0ff",
          "style": "plain",
          "properties": { "var_name": "MAMBA_DEFAULT_ENV" },
          "template": "{{ if .Value }}({{ .Value }}){{ end }}"
        },
        {
          "type": "envvar",
          "background": "transparent",
          "foreground": "#93d0ff",
          "style": "plain",
          "properties": { "var_name": "VIRTUAL_ENV" },
          "template": "{{ if .Value }}({{ .Value | base }}){{ end }}"
        },
        {
          "type": "shell",
          "background": "transparent",
          "foreground": "p:white",
          "style": "plain",
          "template": "  {{ .Name }}"
        },
        {
          "type": "session",
          "background": "transparent",
          "foreground": "p:white",
          "style": "plain",
          "template": "  {{ .HostName }}{{ .UserName }}"
        },
        {
          "type": "text",
          "background": "transparent",
          "foreground": "#b3ffde",
          "style": "plain",
          "template": " · "
        },
        {
          "type": "text",
          "background": "transparent",
          "foreground": "#ffd75f",
          "style": "plain",
          "template": "{{ .Folder }}"
        },
        {
          "type": "text",
          "background": "transparent",
          "foreground": "#b3ffde",
          "style": "plain",
          "template": " · "
        },
        {
          "type": "executiontime",
          "background": "transparent",
          "foreground": "#b3ffde",
          "properties": {
            "style": "austin",
            "threshold": 0
          },
          "style": "plain",
          "template": "{{ .FormattedMs }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "background": "transparent",
          "foreground": "#81ff91",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ff3030{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "❯"
        }
      ]
    }
  ],
  "console_title_template": "{{ if .Root }}[root] {{ end }}{{ .Shell }} in <{{ .Folder }}>",
  "final_space": true,
  "version": 3
}
